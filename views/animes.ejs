<% include header.ejs %>
<body>
<h1> <%= title %> Episodes </h1>
<img id="animeCover" src="<%= animeCover %>" />
<p><%- animeDescription %></p>
<%- animeData.replace(/<a\b[^>]*>/g,"") %>

<h3>Episodes: </h3>
<ul>
    <%  for (var i = 0; i < episodes.length; i++) { %>
    <li class="animeEpisode"><%- episodes[i]; %></li>
    <% } %>
</ul>

<% for (var i = 0; i < animeEmbeds.length; i++) { %>
    <ul>
        <li id="episode<%= i %>">Episode <%= i+1 %> <br> <%- animeEmbeds[i] %></li>
    </ul>
<% } %>

<script>

    // onload
    // Edit all hrefs from anime-joy to your site
    (function() {

        $($('.animeEpisode').find('a').get().reverse()).each(function (index, value) {
            $(this).attr('href', '#episode' + index);
        });

    })();




</script>


